{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ message.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ message.lastname }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ message.subject }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ message.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_message_index') }}">back to list</a>

    <a href="{{ path('app_admin_message_edit', {'id': message.id}) }}">edit</a>

    {{ include('admin_message/_delete_form.html.twig') }}
{% endblock %}
