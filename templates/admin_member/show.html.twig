{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ member.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ member.lastname }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ member.facebook }}</td>
            </tr>
            <tr>
                <th>NumTel</th>
                <td>{{ member.numTel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>Whatsapp</th>
                <td>{{ member.whatsapp }}</td>
            </tr>
            <tr>
                <th>Linkedin</th>
                <td>{{ member.linkedin }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ member.birthday ? member.birthday|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_member_index') }}">back to list</a>

    <a href="{{ path('app_admin_member_edit', {'id': member.id}) }}">edit</a>

    {{ include('admin_member/_delete_form.html.twig') }}
{% endblock %}
