{% extends 'base.html.twig' %}

{% block title %}Evenements{% endblock %}

{% block body %}
<section class="events">
    {% for event in events %}
        <h2> {{ event.title }} </h2>
        <div class="metadata">publie le {{ event.createdAt | date('d/m/Y')}}
            a {{ event.createdAt | date('H:i')}}
        </div>
        <div class="content">
            {{ event.content | raw }}
        </div>
        {# <a href="{{ path('event_show', {'id': event.id})}}" class="btn btn-primary">Lire la suite</a> #}
        <hr>
    {% endfor %}
</section>
{% endblock %}
