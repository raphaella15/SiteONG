{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Numero</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ event.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_event_index') }}">Voir la liste</a>

    <a href="{{ path('app_admin_event_edit', {'id': event.id}) }}">Modifier</a>

    {{ include('admin_event/_delete_form.html.twig') }}
{% endblock %}
