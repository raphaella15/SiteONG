{% extends 'base.html.twig' %}

{% block title %}Les evenements{% endblock %}

{% block body %}
    <h1>Evenements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numero</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.content }}</td>
                <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_event_show', {'id': event.id}) }}">Voir</a>
                    <a href="{{ path('app_admin_event_edit', {'id': event.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">La liste est vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_event_new') }}">Nouvel evenement</a>
{% endblock %}
